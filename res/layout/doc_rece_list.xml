<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ffffff">
    <ImageView 
        android:id="@+id/more_inform_rece_image1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        />
    <ImageView 
        android:id="@+id/more_inform_rece_image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:layout_alignParentRight="true"
        />
    <TextView 
        android:id="@+id/more_inform_rece_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_toLeftOf="@id/more_inform_rece_image2"
        android:layout_toRightOf="@id/more_inform_rece_image1"
        />

</RelativeLayout>
