<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dae1f1"
    tools:context=".DocWriteActivity" >
	 <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/inform_u2"
        >
         <ImageView
            android:id="@+id/doc_write_iv_return"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/login_u12" />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            android:text="撰写公文"
            android:textColor="#ffffff"
            android:textSize="20sp" />
         <ImageView
             android:id="@+id/doc_write_btn_more"
             android:layout_width="60dp"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_centerVertical="true"
             android:scaleType="fitEnd"
             android:src="@drawable/queding"
             />
    </RelativeLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:orientation="vertical"
        android:layout_margin="10dp"
        >
        <EditText 
        android:id="@+id/doc_write_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="标题"
        android:textSize="15sp"
        android:textColor="#000000"
        />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView 
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/fujian"
                android:scaleType="fitCenter"
                />
             <TextView 
            	android:id="@+id/doc_write_fujian"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="添加附件"
            	android:textColor="#000000"
            	android:textSize="20sp"/>
             
        </LinearLayout>
       
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <ImageView 
                android:id="@+id/cancel_fujian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cancelfujian"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <ImageView 
                android:id="@+id/fujian_doc"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:src="@drawable/fujian"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                />
            <TextView 
            	android:id="@+id/doc_write_fujian1"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="关于APP的UI设计的几点想法.docx（116k）"
            	android:textColor="#000000"
            	android:textSize="15sp"
            	android:layout_toRightOf="@id/fujian_doc"
            	android:layout_toLeftOf="@id/cancel_fujian"
            />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView 
                android:id="@+id/cancel_fujian2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/cancelfujian"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <ImageView 
                android:id="@+id/fujian_jpg"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:src="@drawable/fujian"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"
                />
            <TextView 
            	android:id="@+id/doc_write_fujian2"
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:text="外面的风景.jpg（116k）"
            	android:textColor="#000000"
           	 	android:textSize="15sp"
            	android:layout_toRightOf="@id/fujian_jpg"
            	android:layout_toLeftOf="@id/cancel_fujian2"
            />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/corner_white"
            android:gravity="center_vertical"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公文类型"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:layout_margin="3dp"
                />
            <TextView 
                android:id="@+id/isdoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公文"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/corner_white"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重要公文"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                />
            <ToggleButton 
                android:id="@+id/mTogBtn"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:button="@drawable/switch_btn"
                android:checked="false"
                android:layout_alignParentRight="true"
                android:text=""
                android:textOn=""
                android:textOff=""
                android:layout_margin="3dp"
                />
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/corner_white"
            android:gravity="center_vertical"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发送对象"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:layout_margin="3dp"
                />
            <TextView 
                android:id="@+id/doc_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张明"
                android:textColor="#3da1d5"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:layout_margin="3dp"
                />
        </RelativeLayout>
        
    </LinearLayout>
    
    
    

</LinearLayout>
