<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView 
            android:id="@+id/inform_iv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView 
            android:id="@+id/inform_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="18sp"
            android:textColor="#000000"
            />
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView 
        android:id="@+id/inform_tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:ellipsize="end"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou"
            android:scaleType="fitCenter"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/inform_tv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:textSize="15sp"
        android:textColor="#666666"/>
    <LinearLayout 
        android:id="@+id/ll_rece_list"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@drawable/rece_image2">
        <ImageView 
            android:layout_margin="20dp"
        	android:id="@+id/rece_list_move"
        	android:layout_height="40dp"
        	android:layout_width="0dp"
        	android:layout_weight="1"
        	android:src="@drawable/box_03"
        	android:scaleType="fitCenter"/>
        <ImageView 
            android:layout_margin="20dp"
        	android:id="@+id/rece_list_biaoji"
        	android:layout_height="40dp"
        	android:layout_width="0dp"
        	android:layout_weight="1"
        	android:src="@drawable/box_02"
        	android:scaleType="fitCenter"/>
        <ImageView 
            android:layout_margin="20dp"
        	android:id="@+id/rece_list_del"
        	android:layout_height="40dp"
        	android:layout_width="0dp"
        	android:layout_weight="1"
        	android:src="@drawable/box_04"
        	android:scaleType="fitCenter"/>
    </LinearLayout>
    
    

</LinearLayout>
