<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:background="#3da1d5">
	    <ImageView 
	        android:id="@+id/iv_user_5"
	        android:layout_width="40dp"
	        android:layout_height="wrap_content"
	        android:src="@drawable/u89"
	        android:scaleType="fitStart"/>
	    <TextView 
	        android:id="@+id/tv_person_5"
	        android:layout_width="60dp"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/iv_user_5"
	        android:layout_alignParentBottom="true"
	        android:textColor="#ffffff"
	        android:textSize="15sp"
	        android:lines="1"
	        android:ellipsize="end"/>
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_centerInParent="true"
	        android:background="@drawable/bac"
	        android:padding="2dp">
	        <TextView
	            android:id="@+id/tv_notice_rece"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="接收通知"
	            android:textSize="18sp"
	            android:textColor="#3da1d5"
	            android:background="@drawable/mycorner"/>
	        <TextView
	            android:id="@+id/tv_notice_send"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="已发通知"
	            android:textSize="18sp"
	            android:textColor="#ffffff"
	            android:background="@drawable/mycorner_blue"/>
	    </LinearLayout>
	    <ImageView 
	        android:id="@+id/iv_notice_add"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:src="@drawable/tianjia"
	        android:scaleType="fitCenter"
	        android:layout_alignParentRight="true"/>
	</RelativeLayout>
	<FrameLayout 
	    android:id="@+id/fl_notice_content"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="12"
	    ></FrameLayout>

</LinearLayout>