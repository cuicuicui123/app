<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".PersonActivity" >

    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/inform_u2"
        >
        <ImageView 
            android:id="@+id/iv_user3"
            android:layout_height="wrap_content"
            android:layout_width="60dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/login_u12"
            />
        <TextView 
            android:id="@+id/information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        >
        
        <TextView
       	 	android:id="@+id/tv_name"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:textColor="#000000"
        	android:textSize="20sp"
        	android:layout_centerInParent="true"
        />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/u89"
            android:layout_toLeftOf="@id/tv_name"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
             />
    </RelativeLayout>
    
    <View 
        style="@style/divider_horizontal"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >
        <TextView 
        android:id="@+id/department"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="部门："
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        />
        <TextView 
            android:id="@+id/department2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            />
    </LinearLayout>
    <View 
        style="@style/divider_horizontal"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >
        <TextView 
        android:id="@+id/sex"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="性别："
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        />
        <TextView 
            android:id="@+id/sex2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            />
    </LinearLayout>
    <View 
        style="@style/divider_horizontal"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView 
        android:id="@+id/qq"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="QQ号码："
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        />
        <TextView 
            android:id="@+id/qq2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            />
    </LinearLayout>
    <View 
        style="@style/divider_horizontal"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <TextView 
        android:id="@+id/Email"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Email地址："
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        />
        <TextView 
            android:id="@+id/Email2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            />
    </LinearLayout>
    <View 
        style="@style/divider_horizontal"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >
        <TextView 
        android:id="@+id/tel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="电话："
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        />
        <TextView 
            android:id="@+id/tel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            />
    </LinearLayout>
    <View 
        style="@style/divider_horizontal"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        >
        <TextView 
        android:id="@+id/mobile"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="手机："
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        />
        <TextView 
            android:id="@+id/mobile2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="40dp"
            />
    </LinearLayout>
    <View 
        style="@style/divider_horizontal"
        />
    <ImageView 
        android:id="@+id/iv_goout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:src="@drawable/go_out_btn"
        android:scaleType="fitCenter"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    

</LinearLayout>
