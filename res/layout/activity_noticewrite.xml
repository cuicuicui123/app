<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dae1f1"
    tools:context="com.goodo.app.NoticewriteActivity" >
	<RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:background="@drawable/inform_u2"
	        >
	        <ImageView
		    	android:id="@+id/iv_noticeadd_return"
        		android:layout_width="wrap_content"
            	android:layout_height="match_parent"
            	android:layout_alignParentLeft="true"
            	android:scaleType="fitCenter"
            	android:src="@drawable/login_u12" />
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_centerInParent="true"
	            android:text="撰写通知"
	            android:textSize="20sp"
	            android:textColor="#ffffff"
	            />
	        <Button 
	            android:id="@+id/btn_send"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:background="@drawable/fasong"
	            android:layout_centerVertical="true"/>
	    </RelativeLayout>
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="13"
	        android:padding="10dp"
	        android:orientation="vertical"
	        >
	        <EditText 
	            android:id="@+id/edt_noticeadd_title"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:hint="标题"
	            android:layout_margin="10dp"	         
	            />
	        <EditText 
	            android:id="@+id/edt_noticeadd_content"
	            android:layout_width="match_parent"
	            android:layout_height="150dp"
	            android:hint="正文"
	            android:gravity="top"
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            />
	        <LinearLayout 
	            android:id="@+id/ll_Attach"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp">
	            <RelativeLayout
	            	android:id="@+id/rl_addAttach"
	            	android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_marginTop="10dp">
	            <ImageView 
	                android:id="@+id/iv"
	                android:layout_width="30dp"
	                android:layout_height="30dp"
	                android:src="@drawable/fujian"
	                android:scaleType="fitStart"
	                android:layout_alignParentLeft="true"
	                android:layout_centerVertical="true"
	                />
	            <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="添加附件"
	                android:textSize="20sp"
	                android:textColor="#000000"
	                android:layout_centerVertical="true"
	                android:layout_toRightOf="@id/iv"
	                />
	        </RelativeLayout>
	        </LinearLayout>
	       
			<RelativeLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dp"
			    android:layout_marginRight="10dp"
			    android:background="@drawable/corner_white"
			    android:layout_marginTop="20dp"
			    >
			    <TextView 
			        android:id="@+id/tv_noticeadd_remind"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="通知答复"
			        android:textSize="20sp"
			        android:textColor="#000000"
			        android:layout_alignParentLeft="true"
			        android:layout_margin="3dp"
			        />
			    <ToggleButton 
                	android:id="@+id/mTogBtn1"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_centerVertical="true"
                	android:background="@android:color/transparent"
                	android:button="@drawable/switch_btn"
                	android:checked="false"
                	android:layout_alignParentRight="true"
                	android:text=""
                	android:textOn=""
                	android:textOff=""
                	android:layout_margin="2dp"
                	/>
			</RelativeLayout>
			<RelativeLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dp"
			    android:layout_marginRight="10dp"
			    android:background="@drawable/corner_white"
			    android:layout_marginTop="10dp"
			    >
			    <TextView 
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="审核"
			        android:textSize="20sp"
			        android:textColor="#000000"
			        android:layout_alignParentLeft="true"
			        android:layout_margin="3dp"
			        />
			    <ToggleButton 
                	android:id="@+id/mTogBtn2"
                	android:layout_width="wrap_content"
                	android:layout_height="wrap_content"
                	android:layout_centerVertical="true"
                	android:background="@android:color/transparent"
                	android:button="@drawable/switch_btn"
                	android:checked="false"
                	android:layout_alignParentRight="true"
                	android:text=""
                	android:textOn=""
                	android:textOff=""
                	android:layout_margin="2dp"
                	/>
			</RelativeLayout>
			
			<RelativeLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dp"
			    android:layout_marginRight="10dp"
			    android:background="@drawable/corner_white"
			    android:layout_marginTop="10dp"
			    >
			    <TextView 
			        android:id="@+id/tv_notice_msg"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="短信通知"
			        android:textSize="20sp"
			        android:textColor="#000000"
			        android:layout_alignParentLeft="true"
			        android:layout_margin="3dp"
			        />
			    <TextView 
			        android:id="@+id/tv_no_msg"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="不发送短信"
			        android:textSize="20sp"
			        android:textColor="#3da1d5"
			        android:layout_alignParentRight="true"
			        android:layout_margin="3dp"
			        />
			</RelativeLayout>
			<LinearLayout 
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="10dp"
			    android:layout_marginRight="10dp"
			    android:background="@drawable/corner_white"
			    android:layout_marginTop="10dp"
			    android:orientation="horizontal">
			    <TextView 
			        android:id="@+id/sel_person"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="人员"
			        android:textSize="20sp"
			        android:textColor="#000000"
			        android:layout_margin="3dp"
			        />
			    <TextView 
			        android:id="@+id/show_person"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:textSize="20sp"
			        android:textColor="#3da1d5"
			        android:layout_margin="3dp"
			        android:ellipsize="end"
			        android:lines="1"
			        android:layout_gravity="right"/>
			</LinearLayout>
	        
	    </LinearLayout>
    

</LinearLayout>