<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="#ffffff"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="300dp"
        android:layout_height="200dp"
        >
        
        <RelativeLayout 
        android:id="@+id/add_grap_dialog_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        >
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:text="提醒"
            android:textSize="15sp"
            android:textColor="#000000"
            />
        <ImageView 
            android:id="@+id/add_grap_dialog_addremind"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/tianjia"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitEnd"
            />
    </RelativeLayout>
    
    <LinearLayout 
        android:id="@+id/add_grap_dialog_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
    <Button 
            android:id="@+id/add_grap_dialog_sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@drawable/biankuang"
            android:layout_margin="10dp"
            />
    <Button 
            android:id="@+id/add_grap_dialog_quxiao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="@drawable/biankuang"
            android:layout_toRightOf="@id/add_grap_dialog_sure"
            android:layout_margin="10dp"
            />
    </LinearLayout>
    
    <ListView 
        android:id="@+id/add_grap_dialog_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/add_grap_dialog_rl2"
        android:layout_below="@id/add_grap_dialog_rl"
        ></ListView>
    </RelativeLayout>
</LinearLayout>
